{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "lint": {},
    "lint:fix": {},
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "ci:typecheck": {
      "dependsOn": ["@edgedb/auth-remix#typecheck"]
    },
    "ci:test": {
      "dependsOn": [
        "edgedb#test",
        "@edgedb/generate#test:ci",
        "@edgedb/auth-core#test",
        "@edgedb/create#test",
        "@edgedb/ai#test"
      ]
    }
  }
}
